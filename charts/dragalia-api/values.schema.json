{
    "$schema": "https://json-schema.org/draft-07/schema",
    "required": [],
    "properties": {
        "aspnet": {
            "type": "object",
            "required": ["environment", "secret"],
            "properties": {
                "environment": {
                    "type": "string",
                    "enum": ["Development", "Staging", "Production"]
                },
                "logs": {
                    "type": "object",
                    "properties": {
                        "folder": {
                            "type": "string"
                        },
                        "maxSize": {
                            "type": "string"
                        },
                        "retainedFileCount": {
                            "type": "integer"
                        },
                        "rollingInterval": {
                            "type": "string",
                            "enum": ["Infinite", "Year", "Month", "Day", "Hour", "Minute"]
                        }
                    }
                },
                "secret": {
                    "type": "object",
                    "properties": {
                        "hashSalt": {
                            "type": "string"
                        },
                        "developerToken": {
                            "type": "string"
                        }
                    }
                },
                "redis": {
                    "type": "object",
                    "properties": {
                        "sessionExpiryTime": {
                            "type": "integer",
                            "minimum": 1
                        },
                        "dungeonExpiryTime": {
                            "type": "integer",
                            "minimum": 1
                        }
                    }
                },
                "auth": {
                    "type": "object",
                    "properties": {
                        "tokenIssuer": {
                            "type": "string"
                        },
                        "tokenAudience": {
                            "type": "string"
                        },
                        "baasUrl": {
                            "type": "string"
                        },
                        "useLegacyLogin": {
                            "type": "boolean"
                        }
                    }   
                }
            }
        },
        "postgreSql": {
            "type": "object",
            "required": ["auth"],
            "properties": {
                "auth": {
                    "type": "object",
                    "properties": {
                        "postgresPassword": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }   
}